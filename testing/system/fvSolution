FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        smoother  DIC;
        tolerance       1e-06;
        relTol          0.05;
    }
     "(T|nuTilda)"
    {
        solver          GAMG;
        smoother  DILU;
        tolerance       1e-06;
        relTol          0.05;
    }

    U                                   // linear equation system solver for U
    {
        solver          smoothSolver;   // solver type
        smoother        GaussSeidel;    // smoother type
        tolerance       1e-06;          // solver finishes if either absolute
        relTol          0.01;           // tolerance is reached or the relative
                                        // tolerance here
        nSweeps         1;              // setting for smoothSolver
        maxIter         100;            // limitation of iterations number
    }
}

SIMPLE
{
    consistent                         false;
    nNonOrthogonalCorrectors           0;
        residualControl
    {
        p               1e-5;
        Ux              1e-5;
        Uy              1e-5;
        Uz              0.1;
    }
}


relaxationFactors
{
    fields
    {
        "(p|p_rgh)"                    0.30;
    }
    equations
    {
        "(U|T|e|h|nuTilda|k|epsilon|omega)" 0.70;
    }
}



