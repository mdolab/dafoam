FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(p|p_rgh|G)"
    {
        solver           GAMG;
        tolerance        0;
        relTol           0.001;
        smoother         GaussSeidel;
        maxIter          50;
        minIter          1;
    }

    "(p|p_rgh|G)Final"
    {
        $p;
        tolerance       1e-8;
    }

    "(U|T|e|h|nuTilda|k|omega|epsilon)"
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       1e-8;
        relTol          0;
        maxIter         50;
        minIter          1;
    }

    "(U|T|e|h|nuTilda|k|omega|epsilon)Final"
    {
        $U;
        //relTol          0;
    }
}

relaxationFactors
{
    fields
    {
         "(p|p_rgh|G)"                   0.3;
    }
    equations
    {
        "(U|T|e|h|nuTilda|k|omega|epsilon)"                   0.7;
    }
}

PIMPLE
{
    nNonOrthogonalCorrectors 0;
    nCorrectors         2;
    nOuterCorrectors 50;

    residualControl
    {
        "(U|T|e|h|nuTilda|k|omega|epsilon|p|p_rgh|G)" 
        {
            tolerance       1e-8; 
            relTol          1e-8; 
        } 
    }
}



